{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "disableReferencedProjectLoad": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src", "App.tsx", "app.config.ts"],
  "exclude": ["node_modules", "**/node_modules/**"]
}
