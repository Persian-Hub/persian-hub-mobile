{
  "expo": {
    "name": "persian-hub-mobile",
    "slug": "persian-hub-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
      "ios": {
        "bundleIdentifier": "au.com.persianhub.app",
        "buildNumber": "1",
        "supportsTablet": false,
        "infoPlist": {
          "NSPhotoLibraryUsageDescription": "We use your photo library so you can upload business photos.",
          "NSPhotoLibraryAddUsageDescription": "We may save images you select during uploads.",
          "NSCameraUsageDescription": "We use the camera so you can take photos of your business.",
          "NSLocationWhenInUseUsageDescription": "We use your location to help you find nearby Persian businesses.",
          "NSAppTransportSecurity": { "NSAllowsArbitraryLoads": false }  // all your services are HTTPS
        }
      },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.persianhub.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-web-browser"
    ],
    "runtimeVersion": "1.0.0",
    "updates": {
      "url": "https://u.expo.dev/832feafd-fb4a-43ae-84f1-1537588fadaf"
    }
  }
}
