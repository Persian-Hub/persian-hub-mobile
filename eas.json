{
  "cli": {
    "version": ">= 16.18.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development"
    },
    "preview": {
      "distribution": "internal",
      "channel": "preview"
    },
    "production": {
      "autoIncrement": true,
      "channel": "production",
      "android": {
        "buildType": "app-bundle"       // âœ… ensures AAB for Google Play
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "track": "production"           // or "internal", "alpha", "beta"
      }
    }
  }
}
