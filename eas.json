{
  "cli": {
    "version": ">= 16.18.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development"
    },
    "preview": {
      "distribution": "internal",
      "channel": "preview"
    },
    "production": {
      "autoIncrement": true,
      "channel": "production",
      "android": {
        "buildType": "app-bundle"       // âœ… ensures AAB for Google Play
      },
      "ios": {
        "simulator": false,             // build for real devices
        "buildType": "release"          // ensures production release build
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "track": "production"
      },
      "ios": {
        "ascAppId": null,               // optional: will prompt if not set
      //"appleTeamId": null,            // optional: if you have multiple teams
        "appName": "Persian Hub"        // optional: auto-detected if already exists
      }
    }
  }
}
